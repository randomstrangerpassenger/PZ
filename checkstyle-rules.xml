<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!--
    Pulse Ecosystem Checkstyle Rules
    Phase 1.5: Automated verification for logging and exception handling
-->
<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="warning"/>

    <module name="TreeWalker">
        <!-- Prohibit System.out/err - Use PulseLogger instead -->
        <module name="RegexpSinglelineJava">
            <property name="format" value="System\.(out|err)\.print"/>
            <property name="message" value="Use PulseLogger instead of System.out/err"/>
            <property name="ignoreComments" value="true"/>
        </module>

        <!-- Prohibit printStackTrace() - Use PulseLogger.error(msg, e) instead -->
        <module name="RegexpSinglelineJava">
            <property name="format" value="\.printStackTrace\(\)"/>
            <property name="message" value="Use PulseLogger.error(msg, e) instead of printStackTrace()"/>
            <property name="ignoreComments" value="true"/>
        </module>

        <!-- Prohibit wildcard imports -->
        <module name="AvoidStarImport">
            <property name="allowClassImports" value="false"/>
            <property name="allowStaticMemberImports" value="false"/>
        </module>
    </module>
</module>
